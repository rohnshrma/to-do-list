<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        List of <%= date %>
    </title>
    <!-- bs css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">


    <!-- fs css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">


    <!-- custom css -->
    <link rel="stylesheet" href="style.css">

</head>

<body>

    <div class="main wrapper">
        <form action="/" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Enter Task Name..." name="new_item" />
            </div>
            <button type="submit" class="btn btn-success btn-block"><i class="fa-solid fa-plus"></i></button>
        </form>
    </div>

    <div class="tasks-list wrapper">
        <% if (typeof tasks===typeof []) { %>
            <% tasks.forEach((task)=>{ %>
                <div class="task py-2">
                    <%= task.name %>
                        <a href="/delete/<%= task._id %>" class="btn btn-link"><i
                                class="fa-solid fa-delete-left"></i></a>
                </div>
                <%})}else{ %>
                    <p class="text-center">No Items Found</p>
                    <% } %>
    </div>


</body>

</html>